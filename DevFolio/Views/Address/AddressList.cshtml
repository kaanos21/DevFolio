@model List<DevFolio.Models.TblAddress>

@{
    ViewBag.Title = "AddressList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Tanım</th>
        <th>Konum</th>
        <th>Telefon Numarası</th>
        <th>Email:</th>
        <th>Sil</th>
        <th>Güncelle</th>
    @foreach(var x in Model)
            {
    <tr>
        <td>@x.AddresId</td>
        <td>@x.Description</td>
        <td>@x.Location</td>
        <td>@x.PhoneNumber</td>
        <td>@x.Email</td>
        <td><a href="/Address/UpdateAddress/@x.AddresId" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Address/DeleteAddress/@x.AddresId" class="btn btn-danger">Sil</a></td>
    </tr>
            }
    
</table>

<a href="/Address/CreateAddress/" class="btn btn-info">Adres ekleyin</a>

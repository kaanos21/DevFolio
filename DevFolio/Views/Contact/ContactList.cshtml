@model List<DevFolio.Models.TblContact>

@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim Soyisim</th>
        <th>Email</th>
        <th>Öğe</th>
        <th>Mesaj</th>
        <th>Gönderilen Mesaj Tarihi</th>
        <th>Okundumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
          <td>@item.ContactId</td>
          <td>@item.NameSurname</td>
          <td>@item.Email</td>
          <td>@item.Subject</td>
          <td>@item.Message</td>
          <td>@item.SendMessageDate</td>
                @if (item.IsRead == true) {
              <td>OKundu</td>
            }
          else{ 
            <td>Okunmadı</td>
            }
          <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
          <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }


</table>

<a href="/Contact/CreateContact" class="btn btn-info">Yeni İletişim Ekle</a>
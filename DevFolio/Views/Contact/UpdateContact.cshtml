@model DevFolio.Models.TblContact

@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim Güncelleme</h2>

<form method="post">
    <label>İsim Soyisim</label>
    <input type="text" class="form-control" name="NameSurname" value="@Model.NameSurname" />
    <br />
    <label>Email</label>
    <input type="text" class="form-control" name="Email" value="@Model.Email" />
    <br />
    <label>Konu</label>
    <input type="text" class="form-control" name="Subject" value="@Model.Subject"/>
    <br />
    <label>Mesaj</label>
    <input type="text" class="form-control" name="Message" value="@Model.Message"/>
    <br />
    <label>Tarih</label>
    <input type="date" class="form-control" name="SendMessageDate" @Model.SendMessageDate/>
    <br />
    <label>Okundu Bilgisi</label>
    @if (Model.IsRead == true)
    { 
     <input type="checkbox" class="form-control" name="SkillValue" value="@Model.IsRead" checked />
    }
    <br />
    <button class="btn btn-info">Yeteneği Kaydet</button>
</form>


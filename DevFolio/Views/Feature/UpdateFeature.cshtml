@model DevFolio.Models.TblFeature
@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Özellik Güncelleme Sayfası</h2>

<form method="post">
    <label>Yetenek Id</label>
    <input type="text" class="form-control" name="FeatureId" value="@Model.FeatureId" />
    <br />
    <label>Yetenek Başlığı</label>
    <input type="text" class="form-control" name="HeaderTitle" value="@Model.HeaderTitle" />
    <br />
    <label>Yetenek açıklaması</label>
    <input type="text" class="form-control" name="HeaderDescription" value="@Model.HeaderDescription" />
    <br />
    <button class="btn btn-info"></button>
</form>


@model DevFolio.Models.TblTestimonial
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Testimonial Girişi</h2>

<form method="post">
    <label>Referans adı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Referans Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

    <br />
    <label>Referans Görseli</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Testimonial Kaydet</button>
</form>